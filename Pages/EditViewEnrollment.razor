@page "/editviewEnrollment/{id}"

<EditForm Model="@ViewEnrollment" OnValidSubmmit="HandleValidSubmit">
  <DataAnnotationsValidator/>
    <h3>Edit Student</h3>
    <hr/>
    <div class="form-group row">
    <label for="firstName" class="col-sm-2 col-form-label">
      First Name

    </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="firstName"
            @bind-Value="ViewEnrollment.firstName"/>
            <ValidationMessage For="@(()=>ViewEnrollment.firstName)" />
        </div>
    </div>
      <div class="form-group row">
    <label for="lastName" class="col-sm-2 col-form-label">
      Last Name

    </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="lastName"
            @bind-Value="ViewEnrollment.lastName" /> 
             <ValidationMessage For="@(()=>ViewEnrollment.lastName)" />
        </div>
    </div>
  


 <div class="form-group row">
         <label for="students" class="col-sm-2 col-form-label">
    student

    </label>
        <div class="col-sm-10">
 <InputSelect id="students" @bind-Value="ViewEnrollment.studentID" class="form-control">
         @foreach (var dept in Students)
         {
                  <option value="@dept.studentID">@dept.firstName</option>
         }

       </InputSelect>
        </div>
       
       </div>




    
      <div class="form-group row">
          <label for="dateofbirth" class="col-sm-2 col-form-label">Tanggal masuk</label>
          <div class="col-sm-10">
              <InputDate @bind-Value="ViewEnrollment.enrollmentDate" class="form-control" />

          </div>
      </div>
      <button class="btn btn-primary" type="submit">Submit</button>

</EditForm>

